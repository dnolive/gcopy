<?xml version="1.0" encoding="utf-8"?>
<mx:TitleWindow xmlns:fx="http://ns.adobe.com/mxml/2009"
				xmlns:s="library://ns.adobe.com/flex/spark"
				xmlns:mx="library://ns.adobe.com/flex/mx"
				width="800" height="600" borderVisible="false"
				close="{PopUpManager.removePopUp(this)}" 
				layout="absolute" showCloseButton="true"
				title="Cadastro de Equipamento">

	<fx:Declarations>
	</fx:Declarations>
	
	
	<fx:Script>
		<![CDATA[
			import app.models.Equipamento;
			
			import core.controllers.Gateway;
			
			import mx.collections.ArrayCollection;
			import mx.controls.Alert;
			import mx.events.FlexEvent;
			import mx.managers.PopUpManager;
			import mx.rpc.events.FaultEvent;
			import mx.rpc.events.ResultEvent;
			
			[Bindable]
			private var lista: ArrayCollection;
			
			[Bindable]
			private var itemLista: Equipamento;
			
			
			private var ro: Gateway = Gateway.getInstance(
				'http://localhost:8400/gcopy/messagebroker/amf'
			);
			
			protected function onCreationComplete(event:FlexEvent):void	{
				this.lista = new ArrayCollection;
				ro.setSource('br.com.dnolive.services.ServiceEquipamento');
				ro.setDestination('DAO_EQUIPAMENTO');
				ro.setCallBack(this.onSuccessResult, null);
				ro.setOperation('fetchAll');
				ro.dispatch();
			}
			
			protected function onSuccessResult(event:ResultEvent):void {
				this.lista = event.result as ArrayCollection;
			}
			
		]]>
	</fx:Script>
	<s:BorderContainer x="0" y="0" width="100%" height="32" backgroundColor="#CDCDCD"
					   borderVisible="false" dropShadowVisible="true">
		<s:layout>
			<s:HorizontalLayout paddingLeft="10" paddingRight="10" verticalAlign="middle"/>
		</s:layout>
		<s:Label text="Localizar:"/>
		<s:TextInput width="100%"/>
		<s:Button width="39" label="OK"/>
		<s:Spacer width="100%" height="10"/>
		<s:Button label="Novo"/>
		<s:Button label="Alterar"/>
		<s:Button label="Excluir"/>
	</s:BorderContainer>
	
	<s:DataGrid x="0" y="40" width="100%" height="100%" borderVisible="false"
				dataProvider="{this.lista}">
		<s:columns>
			<s:ArrayList>
				<s:GridColumn dataField="id" headerText="CÃ³digo" width="80"></s:GridColumn>
				<s:GridColumn dataField="nome" headerText="Nome"></s:GridColumn>
				<s:GridColumn dataField="ativo" headerText="Status" width="100"></s:GridColumn>
			</s:ArrayList>
		</s:columns>
	</s:DataGrid>

	
</mx:TitleWindow>
